<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/social_friend_list_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="left"
        android:scrollHorizontally="false"
        android:text="@string/social_table_header_position"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp"
        android:width="20dp" android:maxWidth="20dp" android:minWidth="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:text="@string/social_table_header_name"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imgRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="right"
        android:scrollHorizontally="false"
        android:src="@drawable/ico_ranking" />

</TableRow>