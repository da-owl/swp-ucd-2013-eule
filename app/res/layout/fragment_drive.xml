<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.swp_ucd_2013_eule.view.BenchmarkBar
        android:id="@+id/gasPedalBar"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@+id/imgGasPedal"
        android:layout_alignLeft="@+id/imgGasPedal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        app:weight="32" />

    <com.example.swp_ucd_2013_eule.view.BenchmarkBar
        android:id="@+id/brakePedalBar"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@+id/imgBrakePedal"
        android:layout_alignLeft="@+id/imgBrakePedal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        app:weight="32" />

    <com.example.swp_ucd_2013_eule.view.GearIndicator
        android:id="@+id/gearIndicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/brakePedalBar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/brakePedalBar" />

    <ImageView
        android:id="@+id/imgGasPedal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:maxHeight="32dp"
        android:maxWidth="32dp"
        android:src="@drawable/gaspedal" />

    <ImageView
        android:id="@+id/imgBrakePedal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imgGasPedal"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:maxHeight="32dp"
        android:maxWidth="32dp"
        android:src="@drawable/brakepedal" />

    <TextView
        android:id="@+id/lblFuelConsumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gearIndicator"
        android:layout_below="@+id/gearIndicator"
        android:layout_marginTop="20dp"
        android:text="@string/drive_fuel_consumption"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imgFuelConsumptionNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblFuelConsumption"
        android:layout_below="@+id/lblFuelConsumption"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:maxHeight="32dp"
        android:maxWidth="32dp"
        android:src="@drawable/fuel_consumption_now" />

    <ImageView
        android:id="@+id/imgFuelConsumptionCurrentTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgFuelConsumptionNow"
        android:layout_below="@+id/imgFuelConsumptionNow"
        android:layout_marginRight="10dp"
        android:maxHeight="32dp"
        android:maxWidth="32dp"
        android:src="@drawable/fuel_consumption_current_trip" />

    <ImageView
        android:id="@+id/imgFuelConsumptionAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgFuelConsumptionCurrentTrip"
        android:layout_below="@+id/imgFuelConsumptionCurrentTrip"
        android:layout_marginRight="10dp"
        android:src="@drawable/fuel_consumption_all" />

    <TextView
        android:id="@+id/txtFuelConsumptionNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgFuelConsumptionNow"
        android:layout_alignTop="@id/imgFuelConsumptionNow"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/imgFuelConsumptionNow"
        android:gravity="center_vertical"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtFuelConsumptionCurrentTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgFuelConsumptionCurrentTrip"
        android:layout_alignTop="@id/imgFuelConsumptionCurrentTrip"
        android:layout_toRightOf="@id/imgFuelConsumptionAll"
        android:gravity="center_vertical"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtFuelConsumptionAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgFuelConsumptionAll"
        android:layout_alignTop="@id/imgFuelConsumptionAll"
        android:layout_toRightOf="@id/imgFuelConsumptionAll"
        android:gravity="center_vertical"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>